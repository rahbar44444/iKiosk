{
  "openapi": "3.0.1",
  "info": {
    "title": "iKiosk.API",
    "version": "1.0"
  },
  "paths": {
    "/api/Kiosk/languages": {
      "get": {
        "tags": [
          "Kiosk"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Kiosk/verify": {
      "post": {
        "tags": [
          "Kiosk"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PersonalDetailRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PersonalDetailRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PersonalDetailRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Kiosk/services": {
      "get": {
        "tags": [
          "Kiosk"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Kiosk/calculate-remittance": {
      "post": {
        "tags": [
          "Kiosk"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RemittanceCalculationRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RemittanceCalculationRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RemittanceCalculationRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PersonalDetailRequest": {
        "type": "object",
        "properties": {
          "saudiId": {
            "type": "integer",
            "format": "int32"
          },
          "dateOfBirth": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "RemittanceCalculationRequest": {
        "type": "object",
        "properties": {
          "amountToSend": {
            "type": "number",
            "format": "double"
          },
          "exchangeRate": {
            "type": "number",
            "format": "double"
          },
          "fee": {
            "type": "number",
            "format": "double"
          },
          "vatRate": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}
<fx:ViewControl x:Class="iKiosk.UI.Views.LanguageView"
                xmlns:fx="clr-namespace:iKiosk.Framework.Wpf;assembly=iKiosk.Framework.Wpf"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                xmlns:controls="clr-namespace:iKiosk.UI.CustomControls"
                xmlns:conv="clr-namespace:iKiosk.UI.Converters">
    <fx:ViewControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </fx:ViewControl.Resources>
    <controls:KioskLayout>
        <controls:KioskLayout.Resources>
            
        </controls:KioskLayout.Resources>

        <!-- Custom header -->
        <controls:KioskLayout.HeaderContent>
          
                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                    Margin="30,10">
                    <Image Source="/iKiosk.UI;component/Images/language.png"
                   Width="40"
                   Height="40"
                   Margin="0,0,10,0"/>
                <TextBlock Text="{DynamicResource Header_SelectLanguage}"
                       VerticalAlignment="Center"
                       FontFamily="Century Gothic"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryOrangeBrush}"/>
                </StackPanel>
           
        </controls:KioskLayout.HeaderContent>


        <!-- Main content -->
        <controls:KioskLayout.MainContent>
            <!-- Language grid -->
            <ItemsControl ItemsSource="{Binding Languages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <!-- 2 rows, 4 columns -->
                        <UniformGrid Rows="2" Columns="4"
                                 HorizontalAlignment="Center"
                                 VerticalAlignment="Center"
                                 Margin="50"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}" 
                                Height="80" 
                                Width="205" 
                                Margin="20" 
                                Style="{DynamicResource DefaultButtonStyle}"
                            Command="{Binding DataContext.SelectLanguageCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}">
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </controls:KioskLayout.MainContent>      

    </controls:KioskLayout>
</fx:ViewControl>

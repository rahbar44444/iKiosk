<fx:ViewControl x:Class="iKiosk.UI.Views.PersonalDetailsView"
                xmlns:fx="clr-namespace:iKiosk.Framework.Wpf;assembly=iKiosk.Framework.Wpf"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:controls="clr-namespace:iKiosk.UI.CustomControls"
                xmlns:conv="clr-namespace:iKiosk.UI.Converters">

    <fx:ViewControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </fx:ViewControl.Resources>

    <controls:KioskLayout>

        <!-- Header -->
        <controls:KioskLayout.HeaderContent>
            <Grid>
                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Margin="30,10">
                    <Image Source="/iKiosk.UI;component/Images/personal_detail.png"
                           Width="40"
                           Height="40"
                           Margin="0,0,10,0"/>
                    <TextBlock Text="{DynamicResource Header_PersonalDetail}"
                               VerticalAlignment="Center"
                               FontFamily="Century Gothic"
                               FontSize="28"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource PrimaryOrangeBrush}"/>
                </StackPanel>
            </Grid>
        </controls:KioskLayout.HeaderContent>

        <!-- Main Content -->
        <controls:KioskLayout.MainContent>
            <Grid Margin="80">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left section -->
                <StackPanel Grid.Column="0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Width="500"
                            Margin="40 20 20 20">

                    <TextBlock Text="{DynamicResource MainContent_SaudiIqamaId}"
                               FontFamily="Century Gothic"
                               FontSize="22"
                               Foreground="White"
                               Margin="0,0,0,5"/>

                    <TextBox Height="60" Margin="0 0 20 0"
                             Background="White"
                             Foreground="Black"
                             Text="{Binding SaudiIqamaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="{DynamicResource MainContent_DateOfBirth}"
                               FontFamily="Century Gothic"
                               FontSize="22"
                               Foreground="White"
                               Margin="0,20,0,5"/>

                    <!--<TextBox Height="60" Margin="0 0 20 0"
                             Background="White"
                             Foreground="Black"
                             Text="{Binding DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->
                    <DatePicker Margin="0 0 20 0"
                             Background="White"
                             Foreground="Black"
                             SelectedDate="{Binding DateOfBirth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                <!-- Right section -->
                <StackPanel Grid.Column="1" Margin="50 0 0 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">

                    <Button Content="Remittance Calculator"
                            Style="{StaticResource DefaultButtonStyle}"
                            FontSize="20"
                            FontWeight="Normal"
                            Width="260"
                            Height="60"
                            BorderBrush="Transparent"
                            Command="{Binding RemittanceCommand}"
                            Foreground="{StaticResource PrimaryBackgroundBrush}"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,20"/>

                    <controls:NumberKeypadControl
                                                  Height="300"
                                                  Width="400"/>
                </StackPanel>
            </Grid>
        </controls:KioskLayout.MainContent>

    </controls:KioskLayout>

</fx:ViewControl>

<fx:ViewControl x:Class="iKiosk.UI.Views.ExpiredView"
                xmlns:fx="clr-namespace:iKiosk.Framework.Wpf;assembly=iKiosk.Framework.Wpf"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:controls="clr-namespace:iKiosk.UI.CustomControls"
                Background="Transparent">
    <fx:ViewControl.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                      Color="Black"
                      BlurRadius="20"
                      Direction="270"
                      ShadowDepth="5"
                      Opacity="0.3"/>
    </fx:ViewControl.Resources>

    <Grid>
        <!-- 🔹 Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="/iKiosk.UI;component/Images/background.jpg"
                        Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- 🔹 Centered White Panel -->
        <Border Background="White"
                CornerRadius="20"
                Padding="40"
                Margin="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0"
                        Width="800">

                <!-- 🟠 Main Message -->
                <TextBlock TextWrapping="Wrap"
                           TextAlignment="Center"
                           Foreground="Black"
                           FontFamily="Century Gothic"
                           FontSize="26"
                           FontWeight="Normal"
                           Text="{DynamicResource MainContent_ExpiredMessage}"
                           Margin="0,0,0,40">
                </TextBlock>

                <!-- 🟢 Button Row -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="30">

                    <!-- Home Button -->
                    <controls:IconButton Width="220"
                                         Height="80"
                                         BorderThickness="4"
                                         Text="{DynamicResource MainContent_MainScreen}"
                                         IconSource="/iKiosk.UI;component/Images/home.png"
                                         Command="{Binding NavigateMainMenuCommand}"
                                         Style="{StaticResource IconButtonStyle}"/>

                    <!-- Update Button -->
                    <controls:IconButton Width="220" Margin="30 0 0 0"
                                         Height="80"
                                         Text="{DynamicResource MainContent_Update}"    
                                         BorderThickness="4"
                                         IconSource="/iKiosk.UI;component/Images/next.png"
                                         Command="{Binding UpdateCommand}"
                                         Style="{StaticResource IconButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</fx:ViewControl>

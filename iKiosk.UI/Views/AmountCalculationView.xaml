<fx:ViewControl x:Class="iKiosk.UI.Views.AmountCalculationView"
                xmlns:fx="clr-namespace:iKiosk.Framework.Wpf;assembly=iKiosk.Framework.Wpf"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                xmlns:controls="clr-namespace:iKiosk.UI.CustomControls"
                xmlns:conv="clr-namespace:iKiosk.UI.Converters">
    <fx:ViewControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </fx:ViewControl.Resources>
    <controls:KioskLayout>
        <controls:KioskLayout.Resources>
            
        </controls:KioskLayout.Resources>

        <!-- Custom header -->
        <controls:KioskLayout.HeaderContent>
          
                <StackPanel Orientation="Horizontal"
                    VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                    Margin="30,10">
                <Image Source="/iKiosk.UI;component/Images/personal_detail.png"
                    Width="60"
                    Height="60"
                   Margin="0,0,10,0"/>
                <TextBlock Text="{DynamicResource MainContent_AmountToSend}"
                       VerticalAlignment="Center"
                       FontFamily="Century Gothic"
                       FontSize="32"
                       Foreground="{DynamicResource PrimaryBlackBrush}"/>
                </StackPanel>
           
        </controls:KioskLayout.HeaderContent>


        <!-- Main content -->
        <controls:KioskLayout.MainContent>
            <Viewbox>
            <Grid Margin="50 50 50 50">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,40">

                    <!-- Sender -->
                    <Border Background="White"
                    CornerRadius="15"
                    Padding="20"
                    Width="225"
                            Height="175"
                    Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource MainContent_Sender}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               FontSize="20"
                               Foreground="Black"
                               Margin="0,0,0,10"/>
                            <TextBlock Text="Hameed Ali" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}"/>
                            <TextBlock Text="India-INR" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}"/>
                            <TextBlock Text="Bank Account" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}"/>
                            <TextBlock Text="State Bank of India" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}"/>
                        </StackPanel>
                    </Border>

                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{DynamicResource MainContent_ExchangeRate}" Style="{StaticResource TextblockStyle}" Margin="0,30,10,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{DynamicResource MainContent_FeeTaxable}" Style="{StaticResource TextblockStyle}" Margin="0,30,10,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{DynamicResource MainContent_ValueAddedTax}" Style="{StaticResource TextblockStyle}" Margin="0,30,10,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="{DynamicResource MainContent_AmountToPay}" Style="{StaticResource TextblockStyle}" Margin="0,30,10,0"/>


                </StackPanel>

                <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Vertical"
                      Margin="50,20,0,40">


                    <!-- Receiver -->
                    <Border Background="White" Grid.Row="0" Grid.Column="1"
                    CornerRadius="15"
                    Padding="20"
                    Width="225"
                            Height="175"
                    Effect="{DynamicResource CardShadow}">
                        <StackPanel>
                            <TextBlock Text="{DynamicResource MainContent_Receiver}"
                               FontFamily="{StaticResource PrimaryFontFamily}"
                               FontSize="20"
                               Foreground="Black"
                               Margin="0,0,0,10"/>
                            <TextBlock Text="Hameed Ali" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}" />
                            <TextBlock Text="India-INR" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}" />
                            <TextBlock Text="Bank Account" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}" />
                            <TextBlock Text="State Bank of India" Style="{StaticResource TextblockStyle}" Foreground="{StaticResource PrimaryBlackBrush}" />
                        </StackPanel>
                    </Border>

                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding ExchangeRate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource DefaultTextBoxStyle}" Margin="0,25,0,10"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Fee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                             Style="{StaticResource DefaultTextBoxStyle}" Margin="0,5,0,10"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding ValueAddedTax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DefaultTextBoxStyle}" Margin="0,0,0,10"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding AmountToPay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource DefaultTextBoxStyle}" Margin="0,0,0,10"/>
                    
                </StackPanel>


                <!-- Number Keypad -->
                <controls:NumberKeypadControl Grid.Column="2"
                                      Width="300"
                                      Height="250"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Margin="40,0,0,0"/>
            </Grid>
            </Viewbox>
        </controls:KioskLayout.MainContent>      

    </controls:KioskLayout>
</fx:ViewControl>

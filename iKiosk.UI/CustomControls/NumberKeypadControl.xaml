<UserControl x:Class="iKiosk.UI.CustomControls.NumberKeypadControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:iKiosk.UI.Helper"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="300">

    <Border CornerRadius="10"
            BorderThickness="2"
            BorderBrush="#CCC"
            Background="{StaticResource PrimaryWhiteBrush}"
            Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Digits -->
            <Button Content="1" Grid.Row="0" Grid.Column="0" Style="{StaticResource KeypadButtonStyle}" 
                    helpers:ButtonHelper.CornerRadius="10 0 0 0"
                    BorderThickness="0 0 0.5 0.5" Focusable="False" Click="OnKeyClicked"/>

            <Button Content="2" Grid.Row="0" Grid.Column="1" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0.5 0 0 0.5"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="3" Grid.Row="0" Grid.Column="2" Style="{StaticResource KeypadButtonStyle}" 
                    helpers:ButtonHelper.CornerRadius="0 10 0 0"
                    BorderThickness="0.5 0 0 0.5"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="4" Grid.Row="1" Grid.Column="0" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0 0 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="5" Grid.Row="1" Grid.Column="1" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0.5 0 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="6" Grid.Row="1" Grid.Column="2" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0.5 0 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="7" Grid.Row="2" Grid.Column="0" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0 0.5 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="8" Grid.Row="2" Grid.Column="1" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0.5 0.5 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="9" Grid.Row="2" Grid.Column="2" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0.5 0.5 0 0"
                    Focusable="False" Click="OnKeyClicked"/>

            <Button Content="0" Grid.Row="3" Grid.Column="0" Style="{StaticResource KeypadButtonStyle}" 
                    BorderThickness="0 0.5 0 0" 
                    helpers:ButtonHelper.CornerRadius="0 0 0 10"     
                    Focusable="False" Click="OnKeyClicked"/>
            
            <Button Content="Del" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" 
                    BorderThickness="0.5 0.5 0 0" 
                    helpers:ButtonHelper.CornerRadius="0 0 10 0" 
                    Style="{StaticResource KeypadButtonStyle}" Focusable="False" Click="OnKeyClicked"/>
        </Grid>
    </Border>
</UserControl>

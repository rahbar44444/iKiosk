<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Font families -->
    <FontFamily x:Key="PrimaryFontFamily">Century Gothic</FontFamily>
    <FontFamily x:Key="Font.Poppins">/iKiosk.UI;component/Fonts/Poppins/#Poppins Black</FontFamily>
    <FontFamily x:Key="Font.NunitoSans">/iKiosk.UI;component/Fonts/Nunito_Sans/#Nunito Sans</FontFamily>


    <!-- Font sizes -->
    <sys:Double x:Key="HeadingFontSize"
                xmlns:sys="clr-namespace:System;assembly=mscorlib">28</sys:Double>
    <sys:Double x:Key="BodyFontSize"
                xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>

    <!-- Font weights -->
    <FontWeight x:Key="NormalFontWeight">Normal</FontWeight>
    <FontWeight x:Key="BoldFontWeight">Bold</FontWeight>
    <FontWeight x:Key="SemiBoldFontWeight">SemiBold</FontWeight>

</ResourceDictionary>
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Brushes derived from Colors -->
    <SolidColorBrush x:Key="PrimaryOrangeBrush" Color="{StaticResource PrimaryOrangeColor}"/>
    <SolidColorBrush x:Key="PrimaryWhiteBrush" Color="{StaticResource PrimaryWhiteColor}"/>
    <SolidColorBrush x:Key="PrimaryBlackBrush" Color="{StaticResource PrimaryBlackColor}"/>
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="{StaticResource PrimaryBackgoundColor}"/>
    <SolidColorBrush x:Key="HoverBackgroundBrush" Color="{StaticResource HoverBackgroundColor}"/>
    <SolidColorBrush x:Key="PressedBackgroundBrush" Color="{StaticResource PressedBackgroundColor}"/>
    <SolidColorBrush x:Key="IconButtonBorderBrush" Color="{StaticResource PressedBackgroundColor}"/>
    <SolidColorBrush x:Key="IconButtonBackground" Color="{StaticResource PrimaryWhiteColor}"/>
    <SolidColorBrush x:Key="IconButtonForeground" Color="{StaticResource PrimaryBlackColor}"/>
    <SolidColorBrush x:Key="IconButtonHoverBackground" Color="{StaticResource IconButtonHoverColor}"/>
    <SolidColorBrush x:Key="IconButtonHoverBorder" Color="{StaticResource IconButtonHoverBorderColor}"/>
    <SolidColorBrush x:Key="KeyboardBackgroundBrush" Color="{StaticResource KeyboardBackgroundColor}"/>

</ResourceDictionary>